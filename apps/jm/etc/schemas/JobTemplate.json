{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://jm.forma-pro.com/schemas/JobTemplate.json",
  "type": "object",
  "properties": {
    "templateId": { "$ref" : "http://jm.forma-pro.com/schemas/uuid4.json" },
    "processTemplateId": { "$ref" : "http://jm.forma-pro.com/schemas/uuid4.json" },
    "name": { "type": "string"},
    "details": { "type": ["object", "array"] },
    "gracePeriodPolicy": { "$ref": "policy/GracePeriodPolicy.json" },
    "retryFailedPolicy": { "$ref": "policy/RetryFailedPolicy.json" },
    "runSubJobsPolicy": { "$ref": "policy/RunSubJobsPolicy.json" },
    "exclusivePolicy": { "$ref": "policy/ExclusivePolicy.json" }
  },
  "required": ["templateId", "processTemplateId", "name"]
}
