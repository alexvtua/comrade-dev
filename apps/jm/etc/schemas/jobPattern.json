{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://jm.forma-pro.com/schemas/jobPattern.json",
  "type": "object",
  "properties": {
    "uid": { "$ref" : "http://jm.forma-pro.com/schemas/uid.json" },
    "name": { "type": "string"},
    "details": { "type": ["object", "array"] },
    "polices": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "gracePeriodPolicy.json" },
          { "$ref": "retryFailedPolicy.json" }
        ]
      }
    }
  },
  "required": ["uid", "name"]
}