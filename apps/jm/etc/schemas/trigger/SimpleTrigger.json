{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://jm.forma-pro.com/schemas/trigger/SimpleTrigger.json",
  "type": "object",
  "properties": {
    "schema": { "type": "string", "enum": ["http://jm.forma-pro.com/schemas/trigger/SimpleTrigger.json"] },
    "startAt": { "$ref": "../date.json" },
    "intervalInSeconds": { "type": "integer" },
    "repeatCount": { "type": "integer", "multipleOf": 1, "minimum": -1 },
    "misfireInstruction": { "type": "string", "enum": ["fire_now", "reschedule_now_with_existing_repeat_count", "reschedule_now_with_remaining_repeat_count", "reschedule_next_with_remaining_count", "reschedule_next_with_existing_count", "smart_policy", "ignore_misfire_policy" ] }
  },
  "required": ["schema", "misfireInstruction"]
}
